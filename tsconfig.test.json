{
  "extends": "@tsconfig/node18/tsconfig.json",
  "compilerOptions": {
    "noEmit": true,
    "strict": true,
    "module": "Node16",
    "resolveJsonModule": true,
    "removeComments": true,
    "outDir": "../dist",
    "sourceMap": false,
    "types": ["node", "jest"],
    "esModuleInterop": true
  },
  "include": ["jest.config.global.ts", "jest.config.ts", "src/**/__tests__/**/*"],
  "exclude": ["playground/**/*"]
}
