  "compilerOptions": {
    "outDir": "lib",
    "rootDir": "src",
    "sourceMap": true,
    "declaration": false
  },
  "exclude": [
    "dist",
    "jest.config.global.ts",
    "jest.config.ts",
    "lib",
    "playground/**/*",
    "scripts",
    "src/**/__tests__/**/*",
    "test/**/*",
    "tsup.config.ts"
  ]
}
